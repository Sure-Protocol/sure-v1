{
  "compilerOptions": {
    "types": ["mocha"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@solana/spl-token": ["./node_modules/@solana/spl-token"] // This mapping is relative to "baseUrl"
    }
  },
  "exclude": ["tests/disabled"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
}
}
