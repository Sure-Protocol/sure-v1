{
  "extends": "@tsconfig/svelte/tsconfig.json",  
  "include": ["src/**/*", "src-ssr/lib"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "paths": {
      "$static/*": ["./static/*"],
      "$lib/*": ["./src/lib/*"],
      "$stores/*": ["./src/store/*"],
      "$assets/*": ["./src/assets/*"],
      "@solana/spl-token": ["./../../node_modules/@solana/spl-token"]
    },
  },
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}