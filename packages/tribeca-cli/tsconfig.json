{
  "compilerOptions": {
    "esModuleInterop": true,
    //"declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
  },
  "include": [
    "src/**/*"
  ]
}
