{
    "include": [
      "./src/**/*"
    ],
    "exclude": ["dist", "node_modules"],
    "compilerOptions": {
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "composite": true,
      "baseUrl": ".",
      "typeRoots": [
        "types/",
        "src/anchor/types",
        "node_modules/@types"
      ],
    }
  }